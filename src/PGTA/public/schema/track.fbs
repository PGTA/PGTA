file_identifier "PGTA";
namespace PGTASchema;

table Sample
{
    name:string;
    defaultFile:string;
    startTime:long = 0;
    frequency:long;
    probability:float;
    volumeMultiplier:float = 1;
    group:string;
}

table Group
{
    name:string;
    uuid:string;
}

table Restriction
{
    group1:string;
    group2:string;
}

table Track
{
    samples:[Sample];
    groups:[Group];
    restrictions:[Restriction];
}

root_type Track;
